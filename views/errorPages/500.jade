    .col-md-6
      h3 #{t("error.congratulations")}
      p #{t("error.found500")}
        | #{t("error.click_links")}
      !=t("error.error500_text", { postProcess: "jade" })
      p #{t("error.sorry")}
    .col-md-6
      h3 500
      p
        pre #{error.stack}
