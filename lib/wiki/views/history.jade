extends ../../../views/layout

block scripts
  script(src="/clientscripts/wiki_compare.js")

block title
  | Wiki

block content
  .page-header
    h2 Revisionen von "#{pageName}"
      if (typeof(user) !== 'undefined')
        button(id="rev-compare", data-pageName="#{encodeURIComponent(pageName)}", data-subdir="#{subdir}").btn.pull-right: i.icon-stethoscope &nbsp; Vergleichenâ€¦

  table.history.table.table-striped.table-bordered.table-hover.table-condensed
    each item in items
      tr
        td
          input(type="checkbox", value="#{item.fullhash}")
        td #{item.author}
        td #{item.relDate}
        td #{item.subject}
        td 
          a(href="/wiki/#{item.name}/#{item.hashRef}") #{item.hashRef || 'CURRENT'}

  script Jingo.init();
