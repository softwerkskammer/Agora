extends ../../../views/layout

block title
  | #{pageName} : #{subdir}

block content
  .row
    .col-md-12
      .page-header
        h2 "#{pageName}"&nbsp;
          small in Wiki "#{subdir}"
            if (typeof(user) !== 'undefined' && canEdit)
              a.pull-right.btn.btn-default(href="/wiki/edit/#{subdir}/#{pageName}", title="Bearbeiten"): i.icon-edit
              a.pull-right.btn.btn-default(href="/wiki/versions/#{subdir}/#{pageName}", title="Revisionen"): i.icon-sort-by-attributes-alt
              a.pull-right.btn.btn-default(href="/wiki/list/#{subdir}/", title="Alle Seiten in \"#{subdir}\""): i.icon-list
            form.form-search.pull-right(action='/wiki/search', method='post')
              input.form-control(type="text", name="searchtext", placeholder="Wiki durchsuchen")

  !{content}
