extends ../../../views/layout

block title
  | Aktuelles

block content
  .row
    .col-md-12
      .page-header
        .btn-group.pull-right
          if (accessrights.canCreateAnnouncement())
            a.pull-right.btn.btn-default(href="new/", title="Neue Nachricht"): i.fa.fa-file-o.fa-fw
        h2 Nachrichten&nbsp;
          small Alle
  
      dl.dl-horizontal
        for announcement in announcements
          dt #{announcement.fromDate()}
          dd
            a(href='#{encodeURIComponent(announcement.url)}') #{announcement.title}
