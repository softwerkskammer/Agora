extends ../../../views/layout

block title
  | Aktuelles

block content
  .span12
    .page-header
      h2 Nachrichten&nbsp;
        small Alle
        - if (typeof(user) !== 'undefined' && user.member.isAdmin)
            a.pull-right.btn(href="new/"): i.icon-file

    dl.dl-horizontal
      for announcement in announcements
        dt #{announcement.readableDate(announcement.fromDate)}
        dd
            a(href='#{encodeURIComponent(announcement.url)}') #{announcement.title}
