mixin memberlist(members, organizers)
  dl.dl-horizontal
    for member in members
      dt: .member
        a(href="/members/#{encodeURIComponent(member.nickname)}") #{member.nickname}
        | &nbsp; <a href="#" rel="tooltip" data-trigger="hover" title="<img src=#{member.avatarUrl(128)} width=128 height=128/>" > 
        img(src=member.avatarUrl(16))
        | </a>
      dd #{member.firstname} #{member.lastname}, #{member.location}&nbsp;
        if (organizers && organizers.indexOf(member.id) > -1)
          a(href="/mailsender/contactMember/#{encodeURIComponent(member.nickname)}", title="Nachricht schreiben"): span.badge(style="background-color: #DF5353") Ansprechpartner &nbsp;
        if (!organizers && member.isAdmin)
          a(href="/mailsender/contactMember/#{encodeURIComponent(member.nickname)}", title="Nachricht schreiben"): span.badge(style="background-color: #DF5353") Admin
  script
    $("[rel=tooltip]").popover({html: true});
