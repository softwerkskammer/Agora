      h2 Server
      dl.dl-horizontal
        mixin defItem('Uberspace', 'http://uberspace.de', 'Webhoster')
        mixin defItem('Node.js', 'http://nodejs.org', 'Plattform')
        mixin defItem('MongoDB Treiber', 'http://mongodb.github.io/node-mongodb-native/contents.html', 'Persistenz')
        mixin defItem('Async', 'https://github.com/caolan/async', 'Funktionale Erweiterungen')
        mixin defItem('Express', 'http://expressjs.com/api.html', 'Applikationsframework')
        mixin defItem('Winston', 'https://github.com/flatiron/winston', 'Logging')
        mixin defItem('Winston-Config', 'https://github.com/triplem/winston-config', 'Logging Einfach')
        mixin defItem('Underscore "_"', 'http://underscorejs.org', 'Funktionale Erweiterungen')
        mixin defItem('Underscore String "_s"', 'http://epeli.github.com/underscore.string/', 'String Erweiterungen')
        mixin defItem('Moment', 'http://momentjs.com/', 'Datum und Uhrzeit leicht gemacht')
        mixin defItem('Marked.js', 'https://github.com/chjj/marked', 'Markdown nach HTML')
