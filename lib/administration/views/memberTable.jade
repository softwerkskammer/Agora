extends ../../../views/layout

block scripts
  script(src="/clientscripts/jquery.dataTables.min.js")
  script.
    $(document).ready(function() {
      $("#membertable").dataTable({
        "oLanguage": {
          "sUrl": "/clientscripts/dataTables.german.txt"
        },
        "aoColumns": [
          { "bSortable" : false }, null, null, null, null, null, null, null, null, null, null, null, { "sType": "date-eu" }
        ],
        "bPaginate": false,
        "bAutoWidth": false,
        "aaSorting": [[ 1 , "asc" ]],
        "bStateSave": true
      });
    });

block title
  | Ãœbersicht der Mitglieder

block content
  .row
    .col-md-12
      .page-header
        h2 Verwaltung
          small  Mitglieder
      .panel.pre-scrollable
        table.table.table-condensed.table-hover.table-striped#membertable
          thead
            tr
              th Edit
              th Nickname
              th Vorname
              th Nachname
              th Email
              th Twitter
              th Ort/Region
              th Beruf
              th Interessenschwerpunkte
              th Website/Blog
              th Wie&nbsp;ich&nbsp;von&nbsp;der&nbsp;Softwerkskammer&nbsp;erfahren&nbsp;habe
              th Benutzertyp
              th Angelegt
          tbody
            for member in members
              tr
                td: a(href="/members/edit/#{encodeURIComponent(member.nickname)}"): i.icon-edit
                td #{member.nickname}
                td #{member.firstname}
                td #{member.lastname}
                td #{member.email}
                td #{member.twitter}
                td #{member.location}
                td #{member.profession}
                td #{member.interests}
                td #{member.site}
                td #{member.reference}
                td #{member.adminDisplayText()}
                td #{member.created}
    
