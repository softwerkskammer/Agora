extends ../../../views/layout

block title
  | Übersicht der Nachrichten

block content
  .row
    .col-md-12
      .page-header
        h2 Verwaltung
          small  Nachrichten
  .row
    .col-md-12
      .panel.panel-default(style="overflow: scroll; max-height: 600px")
        table.table.table-condensed.table-hover.table-striped
          thead
            tr
              th.ellipsis.narrow Edit
              th.ellipsis Titel
              th.ellipsis.narrow URL
              th.ellipsis.narrow Erstellt am
              th.ellipsis.narrow Anzeigen bis einschließlich
              th.ellipsis.narrow Text
              th.ellipsis.narrow Autor
          tbody
            for announcement in announcements
              tr
                td(class="span1"): a.btn-sm(href="/announcements/edit/#{encodeURIComponent(announcement.url)}"): i.icon-edit
                td.ellipsis.narrow #{announcement.title}
                td.ellipsis.narrow #{announcement.url}
                td.ellipsis.narrow #{announcement.fromDate()}
                td.ellipsis.narrow #{announcement.thruDate()}
                td.ellipsis.narrow #{announcement.message}
                td.ellipsis.narrow #{announcement.author}
