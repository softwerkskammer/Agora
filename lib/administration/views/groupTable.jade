extends ../../../views/layout

block title
  | Übersicht der Gruppen

block scripts
  script(src="/clientscripts/utilities-for-editables.js")
  script
    var initEditable = function () {
      $("table").find("a").filter(function () {return this.id === "type"; }).editable(
        {source: [
          {value: 0, text: "#{groupTypes[0]}"},
          {value: 1, text: "#{groupTypes[1]}"}
        ],
          showbuttons: false}
      );
    };
    $(document).ready(initEditable);


block content
  .span12
    .page-header
      h2 Verwaltung
        small  Gruppen
        - if (typeof(user) !== 'undefined' && user.member.isAdmin)
          | 
          a(href="/groups/new/", class="btn") Neu
  .row-fluid
    .span12(style="overflow: auto")
      table(class="table table-condensed table-hover table-striped")
        thead
          tr
            th Name
            th Titel
            th Email-Präfix
            th Beschreibung
            th Gruppenart
        tbody
          for group in groups
            tr
              th #{group.id}
              td: a#longName(href="#", data-type="text", data-pk="#{group.id}", data-url="groupChanged") #{group.longName}
              td: #{group.emailPrefix}
              td: a#description(href="#", data-type="textarea", data-pk="#{group.id}", data-url="groupChanged") #{group.description}
              td: a#type(href="#", , data-type="select", data-value="#{group.typeCode()}", data-pk="#{group.id}", data-url="groupChanged") #{group.type}
                
