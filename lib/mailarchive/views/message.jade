include ./mailheader-mixin

doctype html
html
  .modal-dialog.cheatsheet
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") #{t("general.close")}&nbsp;&times
        if (!mail)
          h3 #{t("mailarchive.no_emails")}
        else
          h3 #{mail.subject}
            br
            small: mixin mailattributes(mail) 
      .modal-body
        if (mail)
          | !{mail.getHtml()}
