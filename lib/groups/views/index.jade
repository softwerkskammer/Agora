extends ../../../views/layout


mixin grouplist(title, groupsOfAKind)
    h3 #{groupsOfAKind.length} #{title}
    ul.unstyled
      each group in groupsOfAKind
        li
          span.label(style="background-color: #{group.color}; min-width:30px; text-align:right; display:inline-block") #{group.members.length}
          | &nbsp;&nbsp;
          strong: a.group(href="#{group.id}") 
            span.popover-highlight(rel="tooltip-in-body", data-content="#{group.descriptionHTMLFiltered('img')}") #{group.longName}

mixin placeGroupLabels(groupsOfAKind)
    each group in groupsOfAKind
      if (group.mapX && group.mapY && group.shortName)
        strong: a.group(href="#{group.id}")
          .label(style="background-color: #{group.color}; top: #{group.mapYrelative()}%; left: #{group.mapXrelative()}%;  padding: .3em .4em .2em .4em; position:absolute")
            span(rel="tooltip-in-body", data-title="<h4>#{group.longName}</h4>", data-content="#{group.descriptionHTMLFiltered('img')}") #{group.shortName}

