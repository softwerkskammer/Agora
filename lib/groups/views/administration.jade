extends ../../../views/layout
include ../../groupsAndMembers/views/gm-mixins

block title
  | Ãœbersicht der Gruppen

block scripts
  script(src="/clientscripts/group-administration.js")

block content
  .span12
    .page-header
      h2 Verwaltung
        small  Gruppen
    table(class="table table-condensed table-hover table-striped")
      thead
        tr
          th Name
          th Titel
          th Beschreibung
          th Gruppenart
      tbody
        for group in groups
          tr
            td #{group.id}
            td: a#longName(href="#", data-pk="#{group.id}", data-url="administration") #{group.longName}
            td: a#description(href="#", data-pk="#{group.id}", data-url="administration") #{group.description}
            td: a#type(href="#", data-pk="#{group.id}", data-url="administration") #{group.type}
