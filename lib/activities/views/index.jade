extends ../../../views/layout

block title
  | Aktivitäten

block content
  .span12
    .page-header
      h2 Aktivitäten&nbsp;
        small #{range}
        if typeof(user) !== 'undefined' && user.member.isAdmin
          | &nbsp;
          a.btn(href="new/") Neu

    dl.dl-horizontal
      for activity in activities
        dt
          | #{activity.startDate} 
        dd: a(href='#{activity.id}') #{activity.title}
          | in #{activity.location} (#{activity.groupName(groups)})
