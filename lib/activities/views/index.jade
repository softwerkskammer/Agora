extends ../../../views/layout

block title
  | Aktivitäten

block content
  .span12
    .page-header
      h2 Aktivitäten
        small  Alle
        - if (typeof(user) !== 'undefined' && user.member.isAdmin)
          | 
          a.btn(href="new/") Neu

    ul
      for activity in activities
        li
          a(href='#{activity.id}') #{activity.title}
