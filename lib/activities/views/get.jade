extends ../../../views/layout
block title
  | Aktivitäten

block content
  .span12
    .page-header
      h2 #{activity.title}
        small  Aktivität &nbsp;
        - if (typeof(user) !== 'undefined' && user.member.isAdmin)
          a.btn(href="/activities/edit/#{activity.id}") Bearbeiten
  .row-fluid
    .span6
      p Datum: #{activity.activityDate}
      p Zeit: #{activity.startTime}
      p Ort: #{activity.location}
    .span6
      for group in groups
        if group.id == activity.assignedGroup
          p Gruppe: #{group.longName}
      p Beschreibung: #{activity.description}
      p Wegbeschreibung: #{activity.direction}
